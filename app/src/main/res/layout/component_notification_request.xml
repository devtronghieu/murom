<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/request_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/request_buttons">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/request_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@color/primary_500"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/request_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="username"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/request_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/request_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" sends a request to follow you."
        app:layout_constraintStart_toEndOf="@id/request_username"
        app:layout_constraintEnd_toStartOf="@id/request_timestamp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/request_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_500"
        android:text=" 1 day"
        app:layout_constraintStart_toEndOf="@id/request_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:id="@+id/request_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintTop_toBottomOf="@+id/request_info"
    app:layout_constraintBottom_toBottomOf="parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/success_400"
        android:layout_marginEnd="10dp"
        android:text="Accept"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/error_200"
        android:text="Deny"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
